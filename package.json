{
  "name": "git-authors-cli",
  "description": "Print all contributors and add it into package.json",
  "homepage": "https://nicedoc.io/Kikobeats/git-authors-cli",
  "version": "1.0.20",
  "bin": {
    "git-authors": "bin/index.js",
    "git-authors-cli": "bin/index.js"
  },
  "author": {
    "email": "josefrancisco.verdu@gmail.com",
    "name": "Kiko Beats",
    "url": "https://kikobeats.com"
  },
  "contributors": [
    "Jorge Marin <jorge@bitnami.com>"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Kikobeats/git-authors-cli.git"
  },
  "bugs": {
    "url": "https://github.com/Kikobeats/git-authors-cli/issues"
  },
  "keywords": [
    "author",
    "authors",
    "cli",
    "contributor",
    "contributors",
    "package.json"
  ],
  "dependencies": {
    "email-regex": "~4.0.0",
    "execa": "~4.0.0",
    "exists-file": "~3.0.2",
    "json-future": "~2.2.4",
    "meow": "~6.0.0",
    "update-notifier": "~4.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "latest",
    "@commitlint/config-conventional": "latest",
    "ci-publish": "latest",
    "conventional-github-releaser": "latest",
    "finepack": "latest",
    "git-dirty": "latest",
    "husky": "latest",
    "lint-staged": "latest",
    "npm-check-updates": "latest",
    "prettier-standard": "latest",
    "standard": "latest",
    "standard-markdown": "latest",
    "standard-version": "latest"
  },
  "engines": {
    "node": ">= 8"
  },
  "files": [
    "bin"
  ],
  "scripts": {
    "clean": "rm -rf node_modules",
    "lint": "standard-markdown && standard",
    "postrelease": "npm run release:tags && npm run release:github && ci-publish",
    "prerelease": "npm run update:check",
    "pretest": "npm run lint",
    "pretty": "prettier-standard index.js {core,test,bin,scripts}/**/*.js --single-quote --print-width 100",
    "release": "bin/index.js && git add package.json && standard-version -a",
    "release:github": "conventional-github-releaser -p angular",
    "release:tags": "git push --follow-tags origin HEAD:master",
    "test": "exit 0",
    "update": "ncu -a",
    "update:check": "ncu -- --error-level 2"
  },
  "preferGlobal": true,
  "license": "MIT",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "package.json": [
      "finepack",
      "git add"
    ],
    "*.js": [
      "prettier-standard",
      "git add"
    ],
    "*.md": [
      "standard-markdown",
      "git add"
    ]
  }
}
